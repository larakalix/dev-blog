datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id         String     @id @default(cuid())
  title      String
  slug       String     @unique
  category   String
  content    String
  published  Boolean
  authors    Author[]
  categories Category[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Author {
  id        String @id @default(cuid())
  name      String
  username  String
  thumbnail String
  posts     Post[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Category {
  id    String @id @default(cuid())
  name  String
  slug  String @unique
  posts Post[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
