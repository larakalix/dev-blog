// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post {
  id         String     @id @default(cuid())
  title      String
  slug       String     @unique
  category   String
  content    String
  published  Boolean
  authors    Author[]
  categories Category[]
  type       PostType

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

enum PostType {
  POST
  PAGE
}

model Author {
  id        String @id @default(cuid())
  name      String
  username  String
  thumbnail String
  posts     Post[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Category {
  id    String @id @default(cuid())
  name  String
  slug  String @unique
  posts Post[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
